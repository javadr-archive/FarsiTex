% harfi is: A, b, p, t, c, j, ...
% abjad is: alef, b, j, d, h, ...
% adadi is: yek, dow, se, chahar, ...
%
\def\harfi#1{\expandafter\@harfi\csname c@#1\endcsname}
\def\abjad#1{\expandafter\@abjad\csname c@#1\endcsname}
\def\adadi#1{\expandafter\@adadi\csname c@#1\endcsname}

\def\@harfi#1{\beginR\@@harfi#1\endR}
\def\@@harfi#1{%
\ifcase#1\or \or \or \or \or \or \or \or \or \or \or
   \or \or \or \or \or \or \or \or \or \or \or \or \or \or
   \or \or \or \or \or \or \or \else\@ctrerr\fi}

\def\@abjad#1{\beginR\@@abjad#1\endR}
\def\@@abjad#1{%
\ifcase#1\or \or \or \or \or \or \or \or \or \or \or \or
   \or \or \or \or \or \or \or \or \or \or \or \or \or \or
   \or \or \else\@ctrerr\fi}

\def\@adadi#1{\beginR\@@adadi#1\endR}
\def\@@adadi#1{%
   \ifcase#1 \or \or Ⅷ\or \or \or \or
      \or \or \or \or Ⅸ\or ア\or Ⅷア\or
      芒\or あ\or 芒\or 芒\or 砾\or 砾\or
      ア\or 带\or 带Ⅷ\or 带\or
      带\or 带\or 带\or 带\or
      带\or 带\or \or \or
      Ⅷ\else\@ctrerr\fi}
